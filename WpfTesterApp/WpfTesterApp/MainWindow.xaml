<Window x:Class="WpfTesterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTesterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="YellowGreen" MouseMove="Window_MouseMove">
    <Grid>
        <Button x:Name="Button" Content="Button" HorizontalAlignment="Left" Margin="80,249,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="6.099,10.015" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFCE3058" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Calendar HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,52,0,0"/>

    </Grid>
</Window>
